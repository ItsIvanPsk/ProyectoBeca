<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_graph"
    android:label="pokemon_main"
    app:startDestination="@id/pokemonFragment">

    <fragment
        android:id="@+id/pokemonFragment"
        android:name="com.example.primerproyecto.presentation.pokemon_list.PokemonFragment"
        android:label="PokemonFragment" >

        <action
            android:id="@+id/action_pokemonFragment_to_pokemonToDetail"
            app:destination="@id/pokemonToDetail">

        </action>
    </fragment>

    <fragment
        android:id="@+id/pokemonToDetail"
        android:name="com.example.primerproyecto.presentation.pokemon_detail.PokemonToDetail"
        android:label="fragment_pokemon_to_detail"
        tools:layout="@layout/fragment_pokemon_to_detail" >
        <argument
            android:name="name"
            app:argType="string"/>
        <action
            android:id="@+id/action_pokemonToDetail_to_pokemon_camera"
            app:destination="@id/pokemon_camera" />
    </fragment>
    <fragment
        android:id="@+id/pokemon_camera"
        android:name="com.example.primerproyecto.presentation.pokemon_detail.PokemonCamera"
        android:label="fragment_pokemon_camera"
        tools:layout="@layout/fragment_pokemon_camera" >
        <action
            android:id="@+id/action_pokemon_camera_to_pokemonToDetail"
            app:destination="@id/pokemonToDetail" />
    </fragment>

